<div id="abiertaslideshow" class="carousel slide" data-ride="carousel" data-interval="5000">
    <ol class="carousel-indicators">
        {{#slides}}
            <li data-target="#abiertaslideshow" data-slide-to="{{{ key }}}" {{#active}}class="active"{{/active}}></li>
        {{/slides}}
    </ol>
    <div class="carousel-inner">
        {{#slides}}
            <div class="carousel-item {{#active}}active{{/active}}">
                {{#url}}<a href="{{{ url }}}">{{/url}}
                    <img class="d-block w-100 animated fadeIn" src="{{{ image }}}" alt="{{{ slidercap }}}">
                {{#url}}</a>{{/url}}

                <div class="carousel-caption d-none d-md-block animated fadeInRightBig">
                    {{#title}}<h2 class="title">{{{ title }}}</h2>{{/title}}

                    {{#caption}}<div class="caption">{{{ caption }}}</div>{{/caption}}
                </div>
            </div>
        {{/slides}}
    </div>
     <a role="button" href="#abiertaslideshow" data-slide="prev">
         <span class="sr-only">Previous</span>
    </a>
    <a role="button" href="#abiertaslideshow" data-slide="next">
        <span class="sr-only">Next</span>
    </a>
</div>
