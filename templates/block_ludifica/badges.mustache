{{!
    @template block_ludifica/badges

    This template renders the template content area for a resource.

    Example context (json):
    {
        "badges": [],
        "baseurl": "https://moodle_wwwroot_url"
    }
}}

<div id="block_ludifica-badges">

    {{>block_ludifica/playerstats}}
    {{>block_ludifica/buttonsbar}}
    <div class="badges_decoration"></div>
    <div id="badges-box">
        <div class="internaltitle">
            <button class="ludifica_help icon fa fa-question-circle" data-toggle="popover" data-container="body" data-placement="right" data-content="{{#str}}badges_help, block_ludifica{{/str}}"></button>
            <h5> {{#str}} badges, block_ludifica {{/str}} </h5>
        </div>
        <div id="badges-list" class="row">
            {{#badges}}
            <div class="col-lg-6 onebadge">
                <div class="badgecontent">
                    <div>
                        <img class="badge_picture_ludifica" src="{{thumbnail}}" alt="{{name}}" />
                    </div>
                    <div>
                        <div class="info-box">
                            <a class="badgebuttons openbadgeinfo"><span id="moreinfo_ico"></span>{{#str}} moreinfo, block_ludifica {{/str}}</a>
                            <a class="badgebuttons openshare"><span id="share_ico" ></span>{{#str}} badge_share, block_ludifica {{/str}}</a>
                        </div>
                        <div class="more-badge block_ludifica-modal" title="{{name}}">
                            <div class="more_badge_content">
                                <div class="mr-4">
                                    <img src="{{thumbnail}}" alt="{{name}}">
                                </div>
                                <div>
                                    <p>{{description}}</p>
                                    {{#criteria}}
                                    <ul>
                                        <li>{{#pix}} i/star-o, core {{/pix}} {{criteriaitem}}</li>
                                    </ul>
                                    {{/criteria}}
                                    <a class="badgebuttons openshare-from_modal"><span id="share_ico"></span>{{#str}} badge_share, block_ludifica {{/str}}</a>
                                </div>
                            </div>
                        </div>
                        <div class="share_badge_modal block_ludifica-modal" title="{{#str}} badge_share_title, block_ludifica {{/str}}">
                            <div class="share_badge_content">
                                <div class="input-container">
                                    <div class="input-group">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fa fa-link"></i>
                                            </span>
                                        </div>
                                        <input type="text" name="badgelink" aria-label="badge link" value="{{url}}">
                                    </div>
                                </div>
                                <a href="https://www.linkedin.com/profile/add?startTask=CERTIFICATION_NAME&name={{name}}&organizationId=15093394&issueYear={{badgeyear}}&issueMonth={{badgemonth}}&certUrl={{url}}&certId={{badgeid}}&credentialDoesNotExpire=1" target="_blank" class="badge_linkedin"><span>{{#str}} badge_linkedin, block_ludifica {{/str}}</span></a>

                                <a href="https://www.linkedin.com/sharing/share-offsite/?url={{url}}" target="_blank" class="badge_linkedin"><span>{{#str}} badge_linkedin_bio, block_ludifica {{/str}}</span></a>

                                <a href="https://www.facebook.com/sharer/sharer.php?u={{url}}" target="_blank" class="badge_facebook"><span>{{#str}} badge_facebook, block_ludifica {{/str}}</span></a>

                                <a href="https://twitter.com/intent/tweet?text={{name}}&url={{url}}" target="_blank" class="badge_twitter"><span>{{#str}} badge_twitter, block_ludifica {{/str}}</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/badges}}
            {{^badges}}
                <p class="notavailableyet">
                    {{#str}} notuserbadges, block_ludifica {{/str}}
                </p>
            {{/badges}}
        </div>
        {{#canedit}}
        <div>
            <a href="{{baseurl}}/badges/index.php?type=1" class="btn btn-primary">{{#str}} badgemanage, block_ludifica {{/str}}</a>
        </div>
        {{/canedit}}
    </div>
</div>