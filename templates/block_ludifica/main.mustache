{{!
    @template block_ludifica/main

    This template renders the template content area for a resource.

    Example context (json):
    {
        "player": {
            "fullname": "Pepito Perez",
            "avatarurl": "https://moodle_wwwroot_url/some_image"
        },
        "baseurl": "https://moodle_wwwroot_url"
    }
}}

<div id="{{uniqueid}}" class="block_ludifica-content" data-observe-resizes>
    {{#hastabs}}
        <div class="block_ludifica-tabs">
        {{#tabs}}
            <div data-ref="#{{uniqueid}} .tab-{{key}}" title="{{title}}" class="{{state}}">
                <i class="fa fa-{{icon}}"></i>
            </div>
        {{/tabs}}
        </div>
    {{/hastabs}}

    {{#ownprofile}}
    {{>block_ludifica/playerstats}}
    {{/ownprofile}}

    {{#hasdynamichelps}}
    <div class="tab-dynamichelps block_ludifica-tabcontent {{dynamichelpsstate}}">
        <div class="modalhelps">
            <div class="pointsinfo">
                {{#insitecontext}}
                <div>
                    <h3>{{#str}} dynamic_help_title, block_ludifica {{/str}}</h3>
                    <hr>
                    {{#helpvars}}
                    <ul>
                        {{#pointsbyendcourse}}
                            <li>
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-graduation-cap fa-stack-2x"></i>
                                </span>
                                <div>{{#str}} dynamic_help-pointsbyendcourse, block_ludifica, {{pointsbyendcourse}} {{/str}}</div>
                            </li>
                        {{/pointsbyendcourse}}
                        {{#recurrentlogindays}}
                        <li>
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-calendar-o fa-stack-2x"></i>
                                <i class="mt6 fa fa-trophy fa-stack-1x"></i>
                            </span>
                            <div>{{#str}} dynamic_help-recurrentlogindays, block_ludifica, {{recurrentlogindays}} {{/str}}
                            {{#str}} dynamic_help-pointsrecurrentlogin, block_ludifica, {{pointsbyrecurrentlogin1}} {{/str}}</div>
                        </li>
                        <li>
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-calendar fa-stack-2x"></i>
                            </span>
                            <div>{{#str}} dynamic_help-pointsbyday, block_ludifica, {{pointsbyrecurrentlogin2}} {{/str}}</div></li>
                        {{/recurrentlogindays}}
                        {{#coinsbypoints}}
                        <li>
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-database fa-stack-2x"></i>
                                <i class="fa-scale fa fa-usd fa-stack-1x fa-inverse"></i>
                            </span>
                            <div>{{#str}} dynamic_help-pointstocoins, block_ludifica, {{pointstocoins}} {{/str}}
                            {{#str}} dynamic_help-coinsbypoints, block_ludifica, {{coinsbypoints}} {{/str}}</div>
                        </li>
                        {{/coinsbypoints}}
                    </ul>
                </div>
                {{/helpvars}}
                <div>
                    <h3>{{#str}} levelup, block_ludifica {{/str}}</h3>
                    <hr>
                    <ul>
                        {{#levels}}
                            <li>
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-user-o fa-stack-2x"></i>
                                    <i class="fa-levelup fa fa-arrow-circle-up fa-stack-1x"></i>
                                </span>
                                <div>{{#str}} pointslevel, block_ludifica, {{maxpoints}} {{/str}} {{#str}} overcomelevel, block_ludifica, {{name}} {{/str}}</div></li>
                        {{/levels}}
                    </ul>
                </div>
                {{/insitecontext}}
                {{^insitecontext}}
                {{#pointsbyallmodules}}
                <div>
                    {{#helpvars}}
                    <h4>{{#str}} dynamic_help-pointsbyendmodule, block_ludifica, {{pointsbyendcoursemodule}} {{/str}}</h4>
                    {{/helpvars}}
                </div>
                {{/pointsbyallmodules}}
                {{^pointsbyallmodules}}

                {{#hasactivities}}
                <div>
                    <h3>{{#str}} helptitle_pointsbycoursemodule, block_ludifica {{/str}}</h3>
                    <ul>
                    {{#pointsbymodules}}
                        <li><img src="{{{iconurl}}}" alt="{{typetitle}}" /> <div>{{name}} ({{typetitle}}): {{#str}} dynamic_help-pointsbymodule, block_ludifica, {{points}} {{/str}}</div></li>
                    {{/pointsbymodules}}
                    </ul>
                </div>
                {{/hasactivities}}

                {{^hasactivities}}
                <div>
                    <h3>{{#str}} dynamic_help-noactivities, block_ludifica {{/str}}</h3>
                </div>
                {{/hasactivities}}

                {{/pointsbyallmodules}}
                {{/insitecontext}}
            </div>
        </div>
        {{>block_ludifica/buttonsbar}}
    </div>
    {{/hasdynamichelps}}

    {{#player}}
    <div class="tab-profile block_ludifica-tabcontent {{profilestate}}">
        <div class="player_info">
            <div class="avatar-box">
                <img src="{{avatarurl}}" alt="{{nickname}}" /><br />
                <button class="ludifica_help icon fa fa-question-circle" data-toggle="popover" data-container="body" data-placement="right" data-content="{{#str}}level_help, block_ludifica{{/str}}"></button>
            </div>
            <div class="detailscol">
                <div class="nickname-box">
                    <h2>
                        {{{nickcontent}}}
                        <button class="ludifica_help icon fa fa-question-circle" data-toggle="popover" data-container="body" data-placement="right" data-content="{{#str}}name_help, block_ludifica{{/str}}"></button>
                    </h2>
                    {{^ownprofile}}
                        <div class="profiledescription">
                            {{{description}}}
                        </div>
                    {{/ownprofile}}
                </div>
                {{#ownprofile}}
                <div class="tickets-box">
                    <h3> {{#str}} tickets, block_ludifica {{/str}} </h3>
                    <div>
                    {{#tickets}}
                        <div class="oneticket-container">
                            <div class="oneticket" style="background-image: url({{thumbnail}})" title="{{name}}">
                            </div>
                            <div class="count">{{count}}</div>
                        </div>
                    {{/tickets}}
                    {{^tickets}}
                        <p class="notavailableyet">
                            {{#str}} notusertickets, block_ludifica {{/str}}
                        </p>
                    {{/tickets}}
                    </div>
                </div>
                {{/ownprofile}}
            </div>
        </div>
        {{>block_ludifica/buttonsbar}}
    </div>
    {{/player}}

    {{#hastopbycourse}}
    <div class="tab-topbycourse block_ludifica-tabcontent {{topbycoursestate}}">
        {{#hasrowstopbycourse}}
        <div class="ludifica_ranking">
            <div class="ranking_decoration" title="{{#str}}imgranking, theme_abierta{{/str}}"></div>
            <div class="table_container">
                <table class="generaltable">
                    <thead>
                        <tr>
                            <th>{{#str}}positionhead, block_ludifica{{/str}}</th>
                            <th>{{#str}}playerhead, block_ludifica{{/str}}</th>
                            <th>{{#str}}pointshead, block_ludifica{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#topbycourse}}
                        <tr class="{{#current}}current-user{{/current}}">
                            <td class="numeric-cel">{{position}}</td>
                            <td>{{nickname}}</td>
                            <td class="numeric-cel">{{points}}</td>
                        </tr>
                    {{/topbycourse}}
                    </tbody>
                </table>

                <button class="ludifica_help icon fa fa-question-circle" data-toggle="popover" data-container="body" data-placement="right" data-content="{{#str}}course-ranking_help, block_ludifica{{/str}}"></button>
            </div>
        </div>
        {{/hasrowstopbycourse}}
        {{^hasrowstopbycourse}}
            <p class="nottopyet">
                {{#str}} nottopyet, block_ludifica {{/str}}
            </p>
        {{/hasrowstopbycourse}}

        {{>block_ludifica/buttonsbar}}
    </div>
    {{/hastopbycourse}}

    {{#hastopbysite}}
    <div class="tab-topbysite block_ludifica-tabcontent {{topbysitestate}}">
        {{#hasrowstopbysite}}
        <div class="ludifica_ranking">
            <div class="ranking_decoration" title="{{#str}}imgranking, theme_abierta{{/str}}"></div>
            <div class="table_container">
                <table class="generaltable">
                    <thead>
                        <tr>
                            <th>{{#str}}positionhead, block_ludifica{{/str}}</th>
                            <th>{{#str}}playerhead, block_ludifica{{/str}}</th>
                            <th>{{#str}}pointshead, block_ludifica{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#topbysite}}
                        <tr class="{{#current}}current-user{{/current}}">
                            <td class="numeric-cel">{{position}}</td>
                            <td>{{nickname}}</td>
                            <td class="numeric-cel">{{points}}</td>
                        </tr>
                    {{/topbysite}}
                    </tbody>
                </table>

                <button class="ludifica_help icon fa fa-question-circle" data-toggle="popover" data-container="body" data-placement="right" data-content="{{#str}}site-ranking_help, block_ludifica{{/str}}"></button>
            </div>

        </div>
        {{/hasrowstopbysite}}
        {{^hasrowstopbysite}}
            <p class="nottopyet">
                {{#str}} nottopyet, block_ludifica {{/str}}
            </p>
        {{/hasrowstopbysite}}

        {{>block_ludifica/buttonsbar}}
    </div>
    {{/hastopbysite}}

    {{#haslastmonth}}
    <div class="tab-lastmonth block_ludifica-tabcontent {{lastmonthstate}}">
        {{#hasrowslastmonth}}
        <div class="ludifica_ranking">
            <div class="ranking_decoration" title="{{#str}}imgranking, theme_abierta{{/str}}"></div>
            <div class="table_container">
                <table class="generaltable">
                    <thead>
                        <tr>
                            <th>{{#str}}positionhead, block_ludifica{{/str}}</th>
                            <th>{{#str}}playerhead, block_ludifica{{/str}}</th>
                            <th>{{#str}}pointshead, block_ludifica{{/str}}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#lastmonth}}
                        <tr class="{{#current}}current-user{{/current}}">
                            <td class="numeric-cel">{{position}}</td>
                            <td>{{nickname}}</td>
                            <td class="numeric-cel">{{points}}</td>
                        </tr>
                    {{/lastmonth}}
                    </tbody>
                </table>

                <button class="ludifica_help icon fa fa-question-circle" data-toggle="popover" data-container="body" data-placement="right" data-content="{{#str}}lastmonth-ranking_help, block_ludifica{{/str}}"></button>
            </div>
        </div>
        {{/hasrowslastmonth}}
        {{^hasrowslastmonth}}
            <p class="nottopyet">
                {{#str}} nottopyet, block_ludifica {{/str}}
            </p>
        {{/hasrowslastmonth}}
        {{>block_ludifica/buttonsbar}}
    </div>
    {{/haslastmonth}}
</div>