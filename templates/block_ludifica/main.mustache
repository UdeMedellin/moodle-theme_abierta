{{!
    @template block_ludifica/main

    This template renders the template content area for a resource.

    Example context (json):
    {
        "player": {
            "fullname": "Pepito Perez",
            "avatarurl": "https://moodle_wwwroot_url/some_image"
        },
        "baseurl": "https://moodle_wwwroot_url"
    }
}}

<div id="{{uniqueid}}" class="block_ludifica-content" data-observe-resizes>
    {{#hastabs}}
        <div class="block_ludifica-tabs">
        {{#tabs}}
            <div data-ref="#{{uniqueid}} .tab-{{key}}" title="{{title}}" class="{{state}}">
                <i class="fa fa-{{icon}}"></i>
            </div>
        {{/tabs}}
        </div>
    {{/hastabs}}

    {{#ownprofile}}
    {{>block_ludifica/playerstats}}
    {{/ownprofile}}

    {{#player}}
    <div class="tab-profile block_ludifica-tabcontent {{profilestate}}">
        <div class="player_info">
            <div class="avatar-box">
                <img src="{{avatarurl}}" alt="{{nickname}}" /><br />
            </div>
            <div class="detailscol">
                <div class="nickname-box">
                    <h2>{{{nickcontent}}}</h2>
                    {{^ownprofile}}
                        <div class="profiledescription">
                            {{{description}}}
                        </div>
                    {{/ownprofile}}
                </div>
                {{#ownprofile}}
                <div class="tickets-box">
                    <h3> {{#str}} tickets, block_ludifica {{/str}} </h3>
                    <div>
                    {{#tickets}}
                        <div class="oneticket-container">
                            <div class="oneticket" style="background-image: url({{thumbnail}})" title="{{name}}">
                            </div>
                            <div class="count">{{count}}</div>
                        </div>
                    {{/tickets}}
                    {{^tickets}}
                        <p class="notavailableyet">
                            {{#str}} notusertickets, block_ludifica {{/str}}
                        </p>
                    {{/tickets}}
                    </div>
                </div>
                {{/ownprofile}}
            </div>
        </div>
        {{>block_ludifica/buttonsbar}}
    </div>
    {{/player}}

    {{#hastopbycourse}}
    <div class="tab-topbycourse block_ludifica-tabcontent {{topbycoursestate}}">
        {{#hasrowstopbycourse}}
        <div class="ludifica_ranking">
            <div class="ranking_decoration" title="{{#str}}imgranking, theme_abierta{{/str}}"></div>
            <table class="generaltable">
                <thead>
                    <tr>
                        <th>{{#str}}positionhead, block_ludifica{{/str}}</th>
                        <th>{{#str}}playerhead, block_ludifica{{/str}}</th>
                        <th>{{#str}}pointshead, block_ludifica{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                {{#topbycourse}}
                    <tr class="{{#current}}current-user{{/current}}">
                        <td class="numeric-cel">{{position}}</td>
                        <td>{{nickname}}</td>
                        <td class="numeric-cel">{{points}}</td>
                    </tr>
                {{/topbycourse}}
                </tbody>
            </table>
        </div>
        {{/hasrowstopbycourse}}
        {{^hasrowstopbycourse}}
            <p>
                {{#str}} nottopyet, block_ludifica {{/str}}
            </p>
        {{/hasrowstopbycourse}}
        {{>block_ludifica/buttonsbar}}
    </div>
    {{/hastopbycourse}}

    {{#hastopbysite}}
    <div class="tab-topbysite block_ludifica-tabcontent {{topbysitestate}}">
        {{#hasrowstopbysite}}
        <div class="ludifica_ranking">
            <div class="ranking_decoration" title="{{#str}}imgranking, theme_abierta{{/str}}"></div>
            <table class="generaltable">
                <thead>
                    <tr>
                        <th>{{#str}}positionhead, block_ludifica{{/str}}</th>
                        <th>{{#str}}playerhead, block_ludifica{{/str}}</th>
                        <th>{{#str}}pointshead, block_ludifica{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                {{#topbysite}}
                    <tr class="{{#current}}current-user{{/current}}">
                        <td class="numeric-cel">{{position}}</td>
                        <td>{{nickname}}</td>
                        <td class="numeric-cel">{{points}}</td>
                    </tr>
                {{/topbysite}}
                </tbody>
            </table>
        </div>
        {{/hasrowstopbysite}}
        {{^hasrowstopbysite}}
            <p>
                {{#str}} nottopyet, block_ludifica {{/str}}
            </p>
        {{/hasrowstopbysite}}
        {{>block_ludifica/buttonsbar}}
    </div>
    {{/hastopbysite}}

    {{#haslastmonth}}
    <div class="tab-lastmonth block_ludifica-tabcontent {{lastmonthstate}}">
        {{#hasrowslastmonth}}
        <div class="ludifica_ranking">
            <div class="ranking_decoration" title="{{#str}}imgranking, theme_abierta{{/str}}"></div>
            <table class="generaltable">
                <thead>
                    <tr>
                        <th>{{#str}}positionhead, block_ludifica{{/str}}</th>
                        <th>{{#str}}playerhead, block_ludifica{{/str}}</th>
                        <th>{{#str}}pointshead, block_ludifica{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                {{#lastmonth}}
                    <tr class="{{#current}}current-user{{/current}}">
                        <td class="numeric-cel">{{position}}</td>
                        <td>{{nickname}}</td>
                        <td class="numeric-cel">{{points}}</td>
                    </tr>
                {{/lastmonth}}
                </tbody>
            </table>
        </div>
        {{/hasrowslastmonth}}
        {{^hasrowslastmonth}}
            <p>
                {{#str}} nottopyet, block_ludifica {{/str}}
            </p>
        {{/hasrowslastmonth}}
        {{>block_ludifica/buttonsbar}}
    </div>
    {{/haslastmonth}}
</div>