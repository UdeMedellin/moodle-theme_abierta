{{!
    @template block_ludifica/playerstats

    This template renders the template content area for a resource.

    Example context (json):
    {
        "uniqueid": "UNIQUEID",
        "points": 2000,
        "coins": 309,
        "level": "basic"
    }
}}

{{#player}}
<div id="{{uniqueid}}-ps" class="playerstats">
    <button class="ludifica_help icon fa fa-question-circle" data-toggle="popover" data-container="body" data-placement="right" data-content="{{#str}}points_help, theme_abierta{{/str}}"></button>
    <span class="points tepuy-mouse-over" data-ref="#{{uniqueid}}-ps.playerstats .points .popup">
        <i></i>
        {{points}}
        <div class="popup">{{#str}} numpoints, theme_abierta {{/str}}</div>
    </span>
    <span class="coins tepuy-mouse-over" data-ref="#{{uniqueid}}-ps.playerstats .coins .popup">
        <i></i>
        <val key="usercoins">{{coins}}</val>
        <div class="popup">{{#str}} numcoins, theme_abierta {{/str}}</div>
    </span>
</div>
{{/player}}
