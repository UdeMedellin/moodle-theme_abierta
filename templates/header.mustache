{{!
    @template theme_abierta/header

    Page header template

    Example context (json): {}
}}
<nav class="fixed-top navbar navbar-light navbar-expand moodle-has-zindex">
    <div>
        {{#hasdrawertoggle}}
            <div data-region="drawer-toggle" class="d-inline-block mr-3 drawer-toggle">
                <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn nav-link float-sm-left mr-1" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">{{#pix}}i/menubars{{/pix}}<span class="sr-only">{{#str}}sidepanel, core{{/str}}</span></button>
            </div>
        {{/hasdrawertoggle}}

        <a href="{{{ config.wwwroot }}}" class="navbar-brand {{# compact_logo }}has-logo{{/ compact_logo }}
            {{^ compact_logo }}
                d-none d-sm-inline
            {{/ compact_logo }}
                ">
            {{# compact_logo }}
                <span class="logo d-none d-sm-inline">
                    <img src="{{compact_logo}}" alt="{{sitename}}">
                </span>
            {{/ compact_logo }}
            {{^ compact_logo }}
                <span class="site-name d-none d-md-inline">{{{ sitename }}}</span>
            {{/ compact_logo }}
        </a>

        <ul class="nav navbar-nav ml-auto">

            {{>theme_abierta/mainmenu}}

            <ul class="navbar-nav d-none d-md-flex">
                <!-- page_heading_menu -->
                {{{ output.page_heading_menu }}}
            </ul>
            <div class="d-lg-block">
                {{{ output.search_box }}}
            </div>

            <div class="lang-menu">
                {{{ output.render_lang_menu }}}
            </div>

            {{#socialnet}}
            <div class="socialnetworks">
                <span class="nav-item">
                    {{{.}}}
                </span>
            </div>
            {{/socialnet}}

            {{{ output.navbar_plugin_output }}}

            {{{ output.user_menu }}}
        </ul>
    </div>
</nav>
